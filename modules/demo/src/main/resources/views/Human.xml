<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">
    <grid name="human-grid" title="人类" model="com.yyc.demo.db.Human">
        <field name="name"/>
        <field name="age"/>
    </grid>

    <form name="human-form" title="人类" model="com.yyc.demo.db.Human">
        <panel name="mainPanel" >
            <panel name="imagePanel" colSpan="2">
                <field name="image" widget="Image" colSpan="12" />
            </panel>
            <panel title="基本信息" colSpan="6" itemSpan="12">
                <field name="name"/>
                <field name="age"/>
            </panel>
        </panel>
        <panel name="actionsPanel" sidebar="true" stacked="true" title="操作">
            <button name="confirmButton" title="提交" colSpan="12" onClick="save,com.yyc.demo.web.HumanController:save"/>
        </panel>
    </form>
</object-views>