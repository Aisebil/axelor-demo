<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<object-views xmlns="http://axelor.com/xml/ns/object-views"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://axelor.com/xml/ns/object-views http://axelor.com/xml/ns/object-views/object-views_5.3.xsd">
    <grid name="school-grid" title="学校" model="com.yyc.demo.db.School">
        <field name="schoolName"/>
        <field name="telephone"/>
    </grid>

    <form name="school-form" title="学校" model="com.yyc.demo.db.School">
        <panel name="mainPanel" >
            <panel name="imagePanel" colSpan="2">
                <field name="image" widget="Image" colSpan="12" />
            </panel>
            <panel title="基本信息" colSpan="6" itemSpan="12">
                <field name="schoolName" title="学校名称"/>
                <field name="telephone" title="联系电话"/>
            </panel>
        </panel>

    </form>
</object-views>